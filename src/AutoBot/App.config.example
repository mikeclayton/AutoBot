<?xml version="1.0"?>
<configuration>

  <configSections>
    <section name="castle" type="Castle.Windsor.Configuration.AppDomain.CastleSectionHandler, Castle.Windsor" />
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <castle>
    <facilities>
      <facility type="Castle.Facilities.Logging.LoggingFacility, Castle.Facilities.Logging"
                loggingApi="log4net"
                configFile="App.config" />
    </facilities>
    <components>
      <!-- hipchat -->
      <component service="AutoBot.Core.Chat.IChatSession"
                 type="AutoBot.ChatClients.HipChat.HipChatSession, AutoBot.ChatClients.HipChat">
        <parameters>
          <Server>chat.hipchat.com</Server>
          <Username>1234_56789</Username>
          <Password>password</Password>
          <MentionName>@autobot</MentionName>
          <NickName></NickName>
          <Resource>bot</Resource>
          <!--comma-delimited list of room id's-->
          <SubscribedRooms>@all</SubscribedRooms>
        </parameters>
      </component>
      <!-- skype -->
      <!--
      <component service="AutoBot.Core.Chat.IChatSession"
                 type="AutoBot.ChatClients.Skype.SkypeSession, AutoBot.ChatClients.Skype">
      </component>      
      -->
      <component service="AutoBot.Core.Engine.BotEngine"
                 type="AutoBot.Core, AutoBot.Core.Engine.BotEngine">
      </component>
    </components>
  </castle>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>

  <log4net>
    <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <layout type="log4net.Layout.SimpleLayout" />
      <mapping>
        <level value="DEBUG" />
        <foreColor value="White, HighIntensity" />
      </mapping>
      <mapping>
        <level value="INFO" />
        <foreColor value="Green, HighIntensity" />
      </mapping>
      <mapping>
        <level value="ERROR" />
        <foreColor value="Red, HighIntensity" />
      </mapping>
    </appender>
    <root>
      <level value="ALL" />
      <appender-ref ref="ColoredConsoleAppender" />
    </root>
  </log4net>

</configuration>
